<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".CreateActivity">


    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/saodem"
        android:fontFamily="@font/coiny"
        android:text="Be confident"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hat"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:onClick="launchHatActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/hatt" />

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hat"
        android:onClick="launchShirtActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253"
        app:srcCompat="@drawable/ao" />

    <ImageView
        android:id="@+id/bag"
        android:layout_width="94dp"
        android:layout_height="115dp"
        android:baselineAligned="false"
        android:onClick="launchBagActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shirt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258"
        app:srcCompat="@drawable/bag" />

    <ImageView
        android:id="@+id/trousers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shirt"
        android:layout_gravity=""
        android:onClick="launchTrousersActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shirt"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/qg" />

    <ImageView
        android:id="@+id/shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trousers"
        android:onClick="launchShoeActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trousers"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shoes" />

    <ImageView
        android:id="@+id/shoot"
        android:layout_width="65dp"
        android:layout_height="46dp"
        android:background="@drawable/white_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356"
        app:srcCompat="@drawable/ic_stat_cam" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/saodem"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Creative with your style"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/testbtn"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/saodem"
        android:src="@drawable/ic_stat_cong"

        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>